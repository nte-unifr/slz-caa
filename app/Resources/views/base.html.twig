<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

        <title>{% block title %}{{ 'caa_abr'|trans }}{% endblock %}</title>

        {% block stylesheets %}
            <link href="//fonts.googleapis.com/css?family=Open+Sans:400italic,700,300,600,800,400" rel="stylesheet">
            {% stylesheets
                "css/bootstrap.min.css"
                "css/chosen.min.css"
                "css/main.css"
                filter="cssrewrite" output="css/compiled/app.css" %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            <link href="//cdn.datatables.net/t/bs/dt-1.10.11,b-1.1.2,b-colvis-1.1.2,fh-3.1.1,se-1.1.2/datatables.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar navbar-transversal hidden-xs">
                    <div class="container-fluid">
                        <ul class="nav navbar-nav navbar-right">
                            <li {% if "fr" in app.request.locale %}class="active"{% endif %}><a href="fr">Fr</a></li>
                            <li {% if "de" in app.request.locale %}class="active"{% endif %}><a href="de">De</a></li>
                            <li {% if "en" in app.request.locale %}class="active"{% endif %}><a href="en">En</a></li>
                        </ul>
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <a href="//www.unifr.ch"><img src="{{ asset('images/unifr_universite_cut.png') }}" alt="Unifr"></a>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="application-title">
                        <a href="//www.unifr.ch/centredelangues/fr/Auto">{{ 'caa'|trans }}</a><br>
                        <a href="//www.unifr.ch/centredelangues">{{ 'language_center'|trans }}</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <span class="navbar-brand">{{ 'brand'|trans }}</span>
                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="main-navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="#">{{ 'search_material'|trans }}</a></li>
                                    <li><a href="https://survey.unifr.ch/index.php/466119/lang-{{ app.request.locale|split('_')[0] }}">{{ 'registration'|trans }}</a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="//www.unifr.ch/centredelangues/{{ app.request.locale|split('_')[0] }}/Auto/projet-dapprentissage">{{ 'info'|trans }}</a></li>
                                    <li><a href="//www.unifr.ch/centredelangues/{{ app.request.locale|split('_')[0] }}/Auto/FAQ">FAQ</a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right visible-xs-block">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ 'language'|trans }} <span class="caret"></span></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li {% if "fr" in app.request.locale %}class="active"{% endif %}><a href="/fr">Fr</a></li>
                                            <li {% if "de" in app.request.locale %}class="active"{% endif %}><a href="/de">De</a></li>
                                            <li {% if "en" in app.request.locale %}class="active"{% endif %}><a href="/en">En</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            </div>

            {% block body %}{% endblock %}

            <div class="application-footer">
                &copy; {{ 'language_center'|trans }} - <a href="//nte.unifr.ch">Centre NTE</a> - {{ 'unifr'|trans }}
            </div>
        </div>

        {% block javascripts %}
            {# used for assets in javascripts #}
            <script>
                var assetsBaseDir = "{{ asset('assets/') }}"
            </script>
            <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
            <script src="//cdn.datatables.net/t/bs/dt-1.10.11,b-1.1.2,b-colvis-1.1.2,fh-3.1.1,se-1.1.2/datatables.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
            {% javascripts
                "js/bootstrap.min.js"
                "js/chosen.jquery.min.js"
                "bundles/bazingajstranslation/js/translator.min.js"
                "js/translations/*/*.js"
                "js/caa_table.js"
                "js/caa_ui.js"
                "js/caa_filters.js"
                "js/materials.js"
                output="js/compiled/app.js" %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script src="{{ url('bazinga_jstranslation_js') }}"></script>
        {% endblock %}
    </body>
</html>
