<div class="panel panel-default">
    <a class="panel-heading-anchor" data-toggle="collapse" data-target="#collapse{{ identifier }}">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-filter"></i> {{ title }}
                <span id="chevron{{ identifier }}"><i class="fa fa-chevron-down"></i></span>
            </h3>
        </div>
    </a>
    <div id="collapse{{ identifier }}" class="panel-collapse collapse {{ expanded }} filter-collapse" data-chevron="#chevron{{ identifier }}">
        <div class="panel-body">
            {% if radio is not defined %}
                <p class="text-center">
                    <a class="select-all">{{ 'select_all'|trans }}</a> | <a class="deselect_all">{{ 'clear_all'|trans }}</a>
                </p>
            {% endif %}
            {% for element in elements %}
                {% if radio is defined %}
                    {% include 'materials/_radio.html.twig' %}
                {% else %}
                    {% include 'materials/_checkbox.html.twig' with {'value': element} %}
                {% endif %}
            {% endfor %}
        </div>
        {% if footer is defined %}
            <div class="panel-footer">
                <i class="fa fa-info-circle"></i> {{ footer|raw }}
            </div>
        {% endif %}
    </div>
</div>
