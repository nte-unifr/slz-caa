{% extends 'base.html.twig' %}

{% block title %}{{ 'material'|trans }}{% endblock %}

{% block body %}
    <div id="materials" class="row">
        <div class="col-xs-12">
            {% include "materials/spr.html.twig" %}
        </div>
        <div class="col-xs-12">
            <div id="info-selection" class="alert alert-info hidden" role="alert">
                <strong>{{ 'trick'|trans }}</strong> {{ 'select_row_trick'|trans }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="col-xs-12 col-sm-3">
            {% include "materials/filters.html.twig" %}
        </div>
        <div class="col-xs-12 col-sm-9">
            {% include "materials/materials.html.twig" %}
        </div>
    </div>
{% endblock %}
